<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABCNewsAppProject.PopularPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="PopularPic.png" 
                AbsoluteLayout.LayoutBounds=".1, .3, 400, 100" 
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Label Text="Snow and ice warning for country is extended"
                AbsoluteLayout.LayoutBounds="1.3, .3, 500, 100" 
                AbsoluteLayout.LayoutFlags="PositionProportional" />
            <Label Text="Sports News!"
                AbsoluteLayout.LayoutBounds="0.5, 0, 150, 45" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Button x:Name="Button_HomePage" 
                Text="Reurn to home Page"
                AbsoluteLayout.LayoutBounds="1, .9, 150, 45" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                BackgroundColor="Black"
                TextColor="White"
                Clicked="Button_HomePage_Clicked"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>