<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABCNewsAppProject.SportsPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="SportsPic.jpg" />
            <Label Text="Sports News!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="StartAndExpand" />
            <Button x:Name="Button_HomePage" 
                Text="Reurn to home Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="EndAndExpand"
                Clicked="Button_HomePage_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>